<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mm.dao.WxMemberDao">

    <!-- 根据 会员昵称 查询 会员信息 -->
    <select id="findByNickName" parameterType="string" resultType="WxMember">
        select * from t_wx_member where nickName = #{nickName}
    </select>

    <!-- 添加会员 -->
    <insert id="addWxMember" parameterType="WxMember">
        insert into t_wx_member
        (nickName, avatarUrl, gender, city, province, country, language, createTime)
        values
        (#{nickName}, #{avatarUrl}, #{gender}, #{city}, #{province}, #{country}, #{language}, #{createTime})
        <selectKey keyColumn="id" keyProperty="id" resultType="int" order="AFTER">
            select last_insert_id()
        </selectKey>
    </insert>
</mapper>